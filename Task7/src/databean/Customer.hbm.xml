<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="databean.Customer" table="Customer">

        <id name="customer_id" column="customer_id">
            <generator class="identity"/>
        </id>

        <property name="username">
            <column name="username" length="16" not-null="true" />
        </property>
        
        <property name="password">
            <column name="password" length="16"  />
        </property>

        <property name="firstname">
            <column name="firstname" length="16"  />
        </property>
        
        <property name="lastname">
            <column name="lastname" length="16"  />
        </property>
        
        <property name="addr_line1">
            <column name="addr_line1" length="16"  />
        </property>
        
        <property name="addr_line2">
            <column name="addr_line2" length="16"  />
        </property>
        
        <property name="city">
            <column name="city" length="16" />
        </property>
        
        <property name="state">
            <column name="state" length="16"  />
        </property>
        
        <property name="zip">
            <column name="zip"  />
        </property>
        
        <property name="cash">
            <column name="cash"   />
        </property>
        
        <property name="available">
            <column name="available"   />
        </property>


    </class>
</hibernate-mapping>
